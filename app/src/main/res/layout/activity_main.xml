<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Barra de título con el nombre de la aplicación -->
    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Gestión Escolar App"
        android:textSize="24sp"
        android:textAlignment="center"
        android:layout_marginTop="16dp"/>

    <!-- Botón para acceder a la Opción 1 -->
    <Button
        android:id="@+id/opcion1Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Opción 1"
        android:layout_below="@id/titleTextView"
        android:layout_marginTop="16dp"/>

    <!-- Botón para acceder a la Opción 2 -->
    <Button
        android:id="@+id/opcion2Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Opción 2"
        android:layout_below="@id/opcion1Button"
        android:layout_marginTop="16dp"/>

    <!-- Botón para acceder a la Opción 3 -->
    <Button
        android:id="@+id/opcion3Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Opción 3"
        android:layout_below="@id/opcion2Button"
        android:layout_marginTop="16dp"/>

    <!-- Imagen de la escuela -->
    <ImageView
        android:id="@+id/schoolImageView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerInParent="true"
        android:layout_marginTop="32dp"
        android:src="@drawable/school_icon" />

    <!-- Información de contacto -->

    <!-- Pie de página -->

    <TextView
        android:id="@+id/contactInfoTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/footerTextView"
        android:layout_below="@+id/schoolImageView"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="99dp"
        android:layout_marginTop="173dp"
        android:layout_marginEnd="99dp"
        android:layout_marginBottom="38dp"
        android:text="Contacto: contacto@ejemplo.com" />

    <TextView
        android:id="@+id/footerTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="© 2023 Gestión Escolar App"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="16dp"/>
</RelativeLayout>
